<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anpMain" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <VBox style="-fx-background-color: #ECF7FE; -fx-border-color: #CCE3F3;" HBox.hgrow="SOMETIMES">
          <children>
            <HBox>
              <VBox.margin>
                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
              </VBox.margin>
                     <children>
                        <Label fx:id="lblName" text="Nome">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblDate" text="Date" textFill="#8a8a8a">
                           <HBox.margin>
                              <Insets left="5.0" top="2.0" />
                           </HBox.margin>
                        </Label>
                     </children>
            </HBox>
                  <Label fx:id="lblMessage" maxWidth="700.0" text="Mensagem&#10;Teste" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </VBox.margin>
                  </Label>
          </children>
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
          </padding>
          <HBox.margin>
            <Insets />
          </HBox.margin>
        </VBox>
        <Pane prefWidth="50.0" HBox.hgrow="ALWAYS" />
      </children>
    </HBox>
  </children>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
  </padding>
</AnchorPane>
